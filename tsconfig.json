{
  "compilerOptions": {
    "types": ["phaser"],
    "skipLibCheck": true,
    "esModuleInterop": true,

    "module": "ESNext",
    "moduleResolution": "NodeNext",

    "target": "ESNext",
    "outDir": "./dist",

    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules/*"],
  "ts-node": {
    "esm": true,
    "experimentalResolver": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
