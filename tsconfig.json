{
  "compilerOptions": {
    "types": ["phaser"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,

    "module": "ESNext",
    "moduleResolution": "NodeNext",

    "target": "ESNext",
    "outDir": "./dist",

    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*", "*"]
}
